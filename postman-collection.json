    {
      "name": "4. RAG - Document Q&A",
      "item": [
        {
          "name": "Add Content to Knowledge Base",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Spring AI Overview\",\n  \"content\": \"Spring AI is a framework that streamlines the development of AI applications in Java. It provides abstractions for chat models, embeddings, vector stores, and function calling. Spring AI supports multiple providers including OpenAI, Anthropic, Azure, Google, Amazon, and Ollama. Key features include portable APIs across providers, structured output conversion to POJOs, RAG capabilities with vector databases, and observability for AI operations.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rag/add",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rag", "add"]
            }
          }
        },
        {
          "name": "Query Knowledge Base",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/rag/query?question=What providers does Spring AI support?",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rag", "query"],
              "query": [
                {
                  "key": "question",
                  "value": "What providers does Spring AI support?"
                }
              ]
            }
          }
        },
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "test-documents/spring-framework.txt"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/rag/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rag", "upload"]
            }
          }
        },
        {
          "name": "Clear Knowledge Base",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/rag/clear",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rag", "clear"]
            }
          }
        }
      ]
    },
